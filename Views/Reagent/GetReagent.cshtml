@model Reagent
@{
    ViewData["Title"] = Model.Name;
}
<div class="shadow col-md-8 offset-md-2">
    <table class="table table-borderless">
        <tbody>
            <tr>
                <th scope="row">ID:</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th scope="row">Name:</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th scope="row">Alert Level:</th>
                <td>@Model.Alert</td>
            </tr>
            <tr>
                <th scope="row">Location:</th>
                <td>@Model.Location</td>
            </tr>
            <tr>
                <th scope="row">State:</th>
                <td>@Model.State.Name</td>
            </tr>
            <tr>
                <th scope="row">Current Volume:</th>
                <td>@Model.Volume</td>
            </tr>
            <tr>
                <th scope="row">Max Volume:</th>
                <td>@Model.MaxVolume</td>
            </tr>
            <tr>
                <th scope="row">Supplier:</th>
                <td>@Model.Supplier.Name</td>
            </tr>
            <tr>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-controller="Reagent" asp-action="UpdateReagent" asp-route-id="@Model.Id">Edit</a>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                        Delete
                    </button>
                </td>

            </tr>
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure want to delete @Model.Name?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form asp-controller="Reagent" asp-action="DeleteReagent" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
