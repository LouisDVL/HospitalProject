@model NewReagentViewModel
@{
    ViewBag.Title = "New Reagent";
}
@section Scripts {
    <script src="/js/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/js/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<div class="col-md-8 offset-md-2 shadow">
    <form asp-controller="Reagent" asp-action="NewReagent" method="post">
        <div class="form-group">
            <label asp-for="Reagent.Name">Reagent Name: </label>
            <input asp-for="Reagent.Name" class="form-control" />
            <span asp-validation-for="Reagent.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Reagent.Alert">Alert Level: </label>
            <select asp-for="Reagent.Alert" class="custom-select mr-sm-2">
                <option selected>Choose...</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Reagent.Alert" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Reagent.Location">Location </label>
            <input asp-for="Reagent.Location" class="form-control" />
            <span asp-validation-for="Reagent.Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Reagent.stateId">Solid or Liquid </label>
            <select asp-for="Reagent.stateId" class="custom-select mr-sm-2">
                <option selected>Choose...</option>
                <option value="1">Liquid</option>
                <option value="2">Solid</option>
            </select>
            <span asp-validation-for="Reagent.stateId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Reagent.Volume">Current Volume </label>
            <input asp-for="Reagent.Volume" class="form-control" />
            <span asp-validation-for="Reagent.Volume" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Reagent.MaxVolume">Max Volume </label>
            <input asp-for="Reagent.MaxVolume" class="form-control" />
            <span asp-validation-for="Reagent.MaxVolume" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Reagent.SupplierID">Supplier </label>
            <select asp-for="Reagent.SupplierID" asp-items="@Model.Suppliers" class="custom-select mr-sm-2">
                <option value="">Select Supplier</option>
            </select>
            <span asp-validation-for="Reagent.SupplierID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>